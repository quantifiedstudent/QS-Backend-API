{
    "compilerOptions": {
      "sourceMap": true,
      "target": "es6",
      "outDir": "./build",
      "baseUrl": "./src",
      "alwaysStrict": true,
      "noImplicitAny": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "module": "commonjs",
      "resolveJsonModule":true
    },
    "include": [
      ".env",
      "src/**/*.ts"
      ],
    "exclude": [
      "node_modules"
    ]
  }